<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF">

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1.}.%M:%L - %m%n"/>
    </Console>
  </Appenders>
  
  <Loggers>
  
   <Logger name="com.acme.ecom" level="DEBUG" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>

	<Logger name="com.atomikos" level="WARN"  additivity="false">
		<AppenderRef ref="Console" />
	</Logger>
      
    <Root level="WARN">
      <AppenderRef ref="Console"/>
    </Root>
    
  </Loggers>
  
</Configuration>
